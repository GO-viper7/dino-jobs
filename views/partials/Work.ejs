<div class="col col-9 justify-content-center">
	<label for="companyName">Company's Name</label>
	<div class="input-group mb-1">
		<span class="input-group-text" style="
        background-color: transparent;
        color: gray;
        border-right: none;
      " id="basic-addon1">
			<i class="fa-solid fa-building"></i>
		</span>
		<input name="companyName" type="text" class="form-control" id="text"
			value="<%= user.workExperience ? user.workExperience.companyName : "" %>" />
	</div>
	<label for="position">Position</label>
	<div class="input-group mb-1">
		<span class="input-group-text" style="
        background-color: transparent;
        color: gray;
        border-right: none;
      " id="basic-addon1">
			<i class="fas fa-user"></i>
		</span>
		<input name="position" type="text" class="form-control" id="text"
			value="<%= user.workExperience ? user.workExperience.position : "" %>" />
	</div>
	<div class="row g-3">
		<div class="col-md-6">
			<label for="startDate">Start-Date</label>
			<div class="input-group mb-1">
				<span class="input-group-text" style="
        background-color: transparent;
        color: gray;
        border-right: none;
      " id="basic-addon1">
					<i class="fa-solid fa-calendar-days"></i>
				</span>
				<input name="startDate" type="date" class="form-control"
					value="<%= user.workExperience ? user.workExperience.startDate : "" %>" />
			</div>
		</div>
		<div class="col-md-6">
			<label for="endDate">End-Date</label>
			<div class="input-group mb-1">
				<span class="input-group-text" style="
        background-color: transparent;
        color: gray;
        border-right: none;
      " id="basic-addon1">
					<i class="fa-solid fa-calendar-days"></i>
				</span>
				<input name="endDate" type="date" class="form-control"
					value="<%= user.workExperience ? user.workExperience.endDate : "" %>" />
			</div>

		</div>
		<div class="form-group pb-3">
			<label for="description">Description</label>
			<textarea name="description" class="form-control" id="description" rows="5"
				value="<%= user.workExperience ? user.workExperience.description : "" %>"></textarea>
		</div>
	</div>
</div>